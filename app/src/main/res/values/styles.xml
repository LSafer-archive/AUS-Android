<resources>

    <style name="BlackAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/DarkColorPrimary</item>
        <item name="colorPrimaryDark">@color/DarkColorPrimaryDark</item>
        <item name="colorAccent">@color/DarkColorAccent</item>
        <item name="colorSilk">@color/DarkColorSilk</item>
        <item name="colorCounter">@color/DarkColorCounter</item>
    </style>

    <style name="LightAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/LightColorPrimary</item>
        <item name="colorPrimaryDark">@color/LightColorPrimaryDark</item>
        <item name="colorAccent">@color/LightColorAccent</item>
        <item name="colorSilk">@color/LightColorSilk</item>
        <item name="colorCounter">@color/LightColorCounter</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/round_primary</item>
    </style>

</resources>
