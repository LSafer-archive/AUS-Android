<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/kroov_drawerx"
        android:id="@+id/banner"
        android:background="@drawable/round_silk"
        android:padding="10dp">

        <TextView
            android:id="@+id/name"
            android:textStyle="bold"
            style="@style/kroov_title"
            android:text="name" />

        <TextView
            android:text="data"
            style="@style/kroov_separator"/>

        <TextView android:text="status: activated"
            android:layout_marginStart="15dp"
            android:id="@+id/status"
            style="@style/kroov_description"/>

        <TextView
            android:layout_marginStart="15dp"
            android:text="class: lsafer.services.io.Task"
            android:id="@+id/class_name"
            style="@style/kroov_description"/>

        <TextView
            android:text="class file: /storage/emulated/0/download/lsafer.apk"
            android:layout_marginStart="15dp"
            android:id="@+id/apk_path"
            style="@style/kroov_description"/>


        <TextView
            style="@style/kroov_separator"
            android:text="parts" />

        <LinearLayout
            android:layout_marginStart="15dp"
            android:id="@+id/parts_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</LinearLayout>